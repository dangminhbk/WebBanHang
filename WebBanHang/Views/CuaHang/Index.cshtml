@using WebBanHang.Models.CuaHang
@using WebBanHang.HttpHelpers
@model SanPhamCuaHang
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<link href="~/Content/DanhMuc/index.css" rel="stylesheet" />
@Html.Action("AsidePartial", new { maNhaHang = Model.MaNhaHang })
<main style="width:80%; margin:auto">
    <h1 class="text-center">Danh sách sản phẩm</h1>


    <div class="row">
        @foreach (var item in Model.SanPhams)
        {
            <div class="col-md-4 text-center" style="margin-bottom:50px;">
                <div class="card">
                    <img class="card-img-top" src="~/@item.AnhSanPhams.First().DuongDanAnh" class="sanpham-image" alt="Alternate Text" />
                    <div class="card-body">
                        <h2>@item.TenSanPham</h2>
                        <div class="badge badge-danger">@item.GiaSanPham vnd</div>
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSanPham }, new { @class = "btn btn-info"})
                    </div>
                </div>
            </div>
        }
    </div>
<br />
<div class="pager">
    @Html.CreatePageLinks(Model.PageInfo, x => Url.Action("Index", new { maNhaHang = Model.MaNhaHang, page = x }))
</div>
</main>