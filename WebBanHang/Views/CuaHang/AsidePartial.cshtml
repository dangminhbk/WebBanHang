@model List<WebBanHang.Models.DanhMucSanPham>
<aside class="sidebar">
    <div class="header-title">
        <h3> Danh muc </h3>
    </div>
    <div class="Danh mục">
        <ul>
            <li>
                @Html.ActionLink("Tất cả", "Index", new { maNhaHang = ViewBag.maNhaHang });
            </li>
            @foreach (var item in Model)
            {
                <li class="">
                    @Html.ActionLink(item.TenDanhMuc, "Index",new { maNhaHang = ViewBag.maNhaHang, maDanhMuc = item.MaDanhMuc})
                </li>
            }
        </ul>
    </div>
    <div class="filter">
        <ul class="filter-list"></ul>
    </div>
</aside>
