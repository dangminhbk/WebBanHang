
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Trang chủ</title>
    <link href="https://fonts.googleapis.com/css?family=Caveat|Varela+Round&amp;subset=vietnamese" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Home/index.css" rel="stylesheet" />

</head>
<body>
    <div class="grid-body">
        @Html.Partial("Navbar")
        <main>
            <div class="work">
                <div class="slide">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Image/speedwell.jpg" alt="Hoa speedwell">
                                <div class="carousel-caption">
                                    <h3>Chicago</h3>
                                    <p>Thank you, Chicago!</p>
                                </div>
                            </div>

                            <div class="item">
                                <img src="~/Image/sunflower.jpg" alt="Chicago">
                                <div class="carousel-caption">
                                    <h3>Chicago</h3>
                                    <p>Thank you, Chicago!</p>
                                </div>
                            </div>

                            <div class="item">
                                <img src="~/Image/sunflower.jpg" alt="New York">
                                <div class="carousel-caption">
                                    <h3>Chicago</h3>
                                    <p>Thank you, Chicago!</p>
                                </div>
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

            </div>
            <div class="catalogue">
                <div class="catalogue-label"> Hoa trang tri</div>
                <div class="catalogue-spotlight">
                    <ul class="catalogue-spotlight-ul">
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/speedwell.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa speedwell </label>
                        </li>
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/sunflower.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa huong duong</label>
                        </li>
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/tulips.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa huong duong</label>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="catalogue">
                <div class="catalogue-label"> Hoa trang tri</div>
                <div class="catalogue-spotlight">
                    <ul class="catalogue-spotlight-ul">
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/speedwell.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa speedwell </label>
                        </li>
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/sunflower.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa huong duong</label>
                        </li>
                        <li class="sanpham">
                            <div class="image-wrap">
                                <img class="sanpham-image" src="~/Image/tulips.jpg" alt="Alternate Text" />
                            </div>
                            <label class="sanpham-name">Hoa huong duong</label>
                        </li>
                    </ul>
                </div>
            </div>
        </main>
        @Html.Partial("Footer")
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
